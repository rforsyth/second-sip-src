<%
  owner = fetch_taster(producer.owner_id)
%>
<div class="list_item">
  <span class="item_name"><%= link_to producer.name, [owner, producer] %></span>
  <%= render :partial => 'common/details/sharing_icon',
             :locals => { :visibility => producer.try(:visibility) } if viewing_own_data? %>
  <% if displayed_taster.nil? %>
    <span class="username">
      <%= link_to owner.username, polymorphic_path([owner, @producer_class]) %></span>
  <% end %>
  <p><%= truncate(producer.description, :length => 150) %></p>
</div>