<!DOCTYPE html>
<html>
<head>
  <title>SsRails</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
    <div id="nav">
        <% if current_taster %>
        <%= link_to "Edit Profile", edit_taster_path(current_taster.id)%>
        <%= link_to "Logout", :logout%>
        <% else %>
        <%= link_to "Register", new_taster_path%> | 
        <%= link_to "Login", :login %>
        <% end %>
    </div>


<%= yield %>

</body>
</html>
