<h1>Listing notes</h1>

<table>
  <tr>
    <th>Created by</th>
    <th>Updated by</th>
    <th>Type</th>
    <th>Owner</th>
    <th>Visiblity</th>
    <th>Is reference</th>
    <th>Producer</th>
    <th>Product</th>
    <th>Description overall</th>
    <th>Description appearance</th>
    <th>Description aroma</th>
    <th>Description flavor</th>
    <th>Description mouthfeel</th>
    <th>Tasted at</th>
    <th>Score type</th>
    <th>Score</th>
    <th>Buy when</th>
    <th>Occasion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.creator_id %></td>
    <td><%= note.updater_id %></td>
    <td><%= note.type %></td>
    <td><%= note.owner_id %></td>
    <td><%= note.visibility %></td>
    <td><%= note.is_reference %></td>
    <td><%= note.producer_id %></td>
    <td><%= note.product_id %></td>
    <td><%= note.description_overall %></td>
    <td><%= note.description_appearance %></td>
    <td><%= note.description_aroma %></td>
    <td><%= note.description_flavor %></td>
    <td><%= note.description_mouthfeel %></td>
    <td><%= note.tasted_at %></td>
    <td><%= note.score_type %></td>
    <td><%= note.score %></td>
    <td><%= note.buy_when %></td>
    <td><%= note.occasion %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

