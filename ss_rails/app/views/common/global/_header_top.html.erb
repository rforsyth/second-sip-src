    <div id="tophat_inner" class="clearfix">
      <%= render :partial => 'common/global/welcome_bar' %>
    </div>
  </div>

  <div id="header">
    <div id="header_inner">  
      <div id="logo">
        <a href="/">
          <img alt="Second Sip Home" src="/images/SecondSip_smallRipple_Logo.png"/>
        </a>
      </div>
