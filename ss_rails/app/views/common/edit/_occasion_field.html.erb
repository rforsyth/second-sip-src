    <a href="#" class="toggle_off" tabindex="-1">[+]</a></div>
  <%= note_fields.label :occasion, 'Occasion:' %>
  <%= note_fields.text_field :occasion, :class => 'text_field text_wide', 
      :entity_type => @note_class.name, :lookup_type => Enums::LookupType::OCCASION %>
