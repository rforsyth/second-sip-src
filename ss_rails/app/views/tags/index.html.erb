<h1>Listing tags</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Updater</th>
    <th>Name</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.creator_id %></td>
    <td><%= tag.updater_id %></td>
    <td><%= tag.name %></td>
    <td><%= tag.type %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

