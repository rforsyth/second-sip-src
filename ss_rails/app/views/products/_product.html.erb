<div class="list_item">
  <span class="item_name">
    <%= link_to "#{product.producer.name} #{product.name}", [product.owner, product] %>
  <%= render :partial => 'common/details/sharing_icon', :locals => { :visibility => product.visibility } if @show_sharing_icon %>
  <% if show_list_item_username %>
    <span class="username">
      <%= link_to product.owner.username, polymorphic_path([product.owner, @product_class]) %></span>
  <% end %>
  <p><%= truncate(product.description, :length => 150) %></p>
</div>