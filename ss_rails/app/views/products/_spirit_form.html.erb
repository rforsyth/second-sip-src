<%= fields_for(@product) do |product_fields| %>
  <%= render :partial => 'common/edit/style_field',
             :locals => { :product_fields => product_fields, :title => 'Type:',
                          :value => @product.style.try(:name) } %>
  <%= render :partial => 'common/edit/region_field',
             :locals => { :product_fields => product_fields, :title => 'Region:',
                          :value => @product.region.try(:name)  } %>
  <%= render :partial => 'common/edit/price_field', :locals => { :product_fields => product_fields,
    :calculate_function => 'calculate_spe', :price_type_collection => Enums::SpiritPriceType.sorted_collection,
    :selected => Enums::SpiritPriceType::FIFTH } %>
<% end %>